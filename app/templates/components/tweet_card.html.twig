{# filepath: app/templates/components/tweet_card.html.twig #}
<div class="tweet" id="tweet-{{ tweet.id }}">
    <div class="tweet-header">
        <p>
            <strong>
                <a href="{{ path('profile_by_id', {'id': tweet.author.id}) }}" style="color:inherit; text-decoration:none;">
                    {{ tweet.author.pseudo }}
                </a>
            </strong>
             - {{ tweet.date|date('Y-m-d H:i') }}</p>
        <div>
            <a href="{{ path('tweet_show', {'id': tweet.id}) }}" class="btn btn-primary" title="Voir le tweet">
                <i class="fa-regular fa-eye"></i>
            </a>

            {% if app.request.attributes.get('_route') == 'profile' %}
                <form method="POST" action="{{ path('tweet_delete', {'id': tweet.id}) }}" style="display:inline;">
                    <button type="submit" class="btn btn-danger" title="Supprimer le tweet">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </form>
            {% endif %}
        </div>
    </div>
    <p>{{ tweet.content }}</p>
    <p>
        <form method="POST" action="{{ path('timeline_like_tweet', {id: tweet.id}) }}" style="display:inline;">
            <button type="submit" class="btn-icon" title="Liker ce tweet">
                <i class="fa-regular fa-heart"></i>
            </button>
            
            {{ tweet.likes.count }}
        </form>
        &nbsp;&nbsp;
        <i class="fa-regular fa-comment"></i> {{ tweet.comments.count }}
    </p>
</div>

<style>
.tweet {
    padding: 20px;
    border-bottom: 1px solid #e6ecf0;
    transition: background-color 0.2s ease-in-out;
    background: white;
}
.tweet:hover {
    background-color: #f0f8ff;
}
.tweet-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}
.tweet-header p {
    margin: 0;
    font-size: 0.9rem;
    color: #657786;
}
.tweet-header .btn {
    margin: 0;
}
.tweet p {
    margin: 5px 0;
}
.tweet strong {
    color: #14171a;
    font-weight: bold;
}
.btn.btn-primary {
    display: inline-block;
    padding: 6px 12px;
    background-color: #1da1f2;
    color: white;
    border-radius: 20px;
    text-decoration: none;
    font-size: 0.9rem;
    transition: background-color 0.2s;
}
.btn.btn-primary:hover {
    background-color: #0d8ddb;
}
.btn-icon {
    background: none;
    border: none;
    cursor: pointer;
    color: #e0245e;
    font-size: 1rem;
    padding: 0;
}
.btn-icon:hover {
    color: #c2184b;
}
.btn-icon i {
    margin-right: 5px;
}
i.fa-comment {
    color: #1da1f2;
    margin-left: 15px;
}
</style>