{% extends 'base.html.twig' %}

{% block title %}Register - TweetToast{% endblock %}

{% block body %}
<h1>Register</h1>

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <div class="form-group">
        {{ form_label(form.pseudo) }}
        {{ form_widget(form.pseudo) }}
        {{ form_errors(form.pseudo) }}
    </div>

    <div class="form-group">
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="form-group">
        {{ form_label(form.password) }}
        {{ form_widget(form.password) }}
        {{ form_errors(form.password) }}
    </div>

    <div class="form-group">
        {{ form_errors(form, {'attr': {'class': 'form-errors'}}) }}
    </div>

    <button type="submit">Register</button>
{{ form_end(form) }}

<p>Already have an account? <a href="/login">Login here</a>.</p>
{% endblock %}


{% block style %}
<style>
body {
    background-color: #f5f8fa;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
}

h1 {
    text-align: center;
    color: #1da1f2;
    margin-top: 40px;
}

form {
    max-width: 400px;
    margin: 30px auto;
    padding: 30px;
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    display: flex;
    flex-direction: column;
}

form label {
    margin-bottom: 5px;
    color: #14171a;
    font-weight: bold;
}

form input {
    padding: 10px;
    margin-bottom: 5px;
    border: 1px solid #ccd6dd;
    border-radius: 5px;
    font-size: 1rem;
    background-color: #f5f8fa;
}

form input:focus {
    border-color: #1da1f2;
    outline: none;
    background-color: white;
}

.form-group {
    margin-bottom: 15px;
    display: flex;
    flex-direction: column;
}

.form-group li {
    color: #e0245e;
    font-size: 0.9rem;
    margin-top: 5px;
}

.form-group ul {
    color: #e0245e;
    font-size: 0.9rem;
    margin: 0 0 15px 0;
    padding-left: 20px;
}

button[type="submit"] {
    background-color: #1da1f2;
    color: white;
    border: none;
    padding: 10px;
    border-radius: 20px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.2s;
    margin-top: 10px;
}

button[type="submit"]:hover {
    background-color: #0d8ddb;
}

p {
    text-align: center;
    color: #657786;
    margin-top: 20px;
}

p a {
    color: #1da1f2;
    text-decoration: none;
    font-weight: bold;
}

p a:hover {
    text-decoration: underline;
}
</style>
{% endblock %}
